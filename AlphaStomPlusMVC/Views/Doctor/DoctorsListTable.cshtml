@using AlphaStomPlusMVC.Models.ViewModels.Doctor;
@model List<AlphaStomPlusMVC.Models.Doctor>
@{ 
    int counter = 1;
}

@if (Model.Any())
{
    <div class="table-container" id="doctor-table-container">
        <table class="table table-striped table-hover tablesorter" id="doctors-list-table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>ФИО</th>
                    <th>Должность</th>
                    <th data-sorter="false"></th>
                    <th data-sorter="false"></th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var doc in Model)
                {
                <tr data-doctor-id="@doc.Id">
                    <td>@(counter++)</td>
                    <td>@doc.FullName</td>
                    <td>@doc.Position</td>
                    <td><button type="button" class="btn btn-sm btn-outline-primary edit-doctor"><i class="bi bi-pencil-fill"></i> Редактировать</button></td>
                    @if (doc.Status == 1)
                    {
                        <td><button type="button" class="btn btn-sm btn-outline-secondary delete-restore-btn delete-doctor" data-doctor-id=""><i class="bi bi-folder-plus"></i> Перевести в архив</button></td>
                    }
                    else
                    {
                        <td><button type="button" class="btn btn-sm btn-outline-secondary delete-restore-btn restore-doctor" data-doctor-id=""><i class="bi bi-folder-symlink"></i> Вернуть в работу</button></td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h4>По заданной выборке врачи не найдены</h4>
}
