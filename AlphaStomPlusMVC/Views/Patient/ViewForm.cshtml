@using AlphaStomPlusMVC.Models;
@using AlphaStomPlusMVC.Models.ViewModels.Patient;
@model ViewPatientViewModel

@{ 
    int appCounter = 1;
    int docCounter = 1;
}

<div class="view-patient" id="view-form">
    <div class="patient-view__info-form simple-column" id="patient-info">
        <input type="text" name="Id" id="patient-id" hidden value="@Model.Patient.Id" />

        <label>ФИО</label>
        <div class="simple-row">
            <span>@Model.Patient.FullName</span>
        </div>

        <div class="simple-row">
            <div class="simple-column simple-row__item simple-row__item_size_medium">
                <label>Дата рождения</label>
                <span>@Model.Patient.DateOfBirth.ToShortDateString()</span>
            </div>

            <div class="simple-column simple-row__item simple-row__item_size_small">
                <label>Пол</label>
                <div class="simple-row">
                    <span>@(Model.Patient.Sex == 1 ? "Мужской" : "Женский")</span>
                </div>
            </div>
        </div>

        <label>Номер карты</label>
        <div class="simple-row">
            <span>@Model.Patient.CardNumber</span>
        </div>

        <label>Телефон</label>
        <div class="simple-row">
            <span>@Model.Patient.Phone</span>
        </div>

        <div class="simple-row">
            <label>Снимок на руках: <input type="checkbox" name="HasXray" class="form-check-inline" @(Model.Patient.HasXray == true ? "checked" : "") disabled /></label>
            <label>Снимок в клинике: <input type="checkbox" name="XrayInClinic" class="form-check-inline" @(Model.Patient.XrayInClinic == true ? "checked" : "") disabled /></label>
            <label>Страховка: <input type="checkbox" name="HasInsurance" class="form-check-inline" @(Model.Patient.HasInsurance == true ? "checked" : "") disabled /></label>
        </div>
    </div>

    <div class="patient-view__action-buttons simple-column" id="patient-buttons">
        <button type="button" class="btn btn-primary action-buttons__button" id="print-patient-card"><i class="bi bi-printer-fill"></i> Печать карты пациента</button>
        <button type="button" class="btn btn-primary action-buttons__button" id="print-contract"><i class="bi bi-printer-fill"></i> Печать договора</button>
        <button type="button" class="btn btn-primary action-buttons__button" id="print-consent"><i class="bi bi-printer-fill"></i> Печать информированного согласия</button>
        <button type="button" class="btn btn-primary action-buttons__button" id="add-document"><i class="bi bi-file-earmark-plus"></i> Добавить документ</button>
        <button type="button" class="btn btn-primary action-buttons__button" id="add-appointment"><i class="bi bi-calendar2-plus-fill"></i> Добавить запись на прием</button>
    </div>

    <div class="patient-view__documents" id="patient-docs">
        <h5>Документы пациента</h5>
        @if (Model.Documents.Any())
        {
            <div class="table-container" id="documents-table-container">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Наименование</th>
                            <th>Тип документа</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Documents)
                        {
                            <tr class="doc-tr" data-doc-id="@item.Id">
                                <td>@(docCounter++)</td>
                                <td>@item.Name</td>
                                <td>@item.TypeName</td>
                            </tr>
                        } 
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <span>Документы не найдены</span>
        }
    </div>

    <div class="patient-view__appointments" id="patient-appointments">
        <h5>Предстоящие приёмы</h5>
        @if (Model.Appointments.Any())
        {
            <div class="table-container" id="appointments-table-container">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Дата и время</th>
                            <th>Врач</th>
                            <th>Услуга</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model.Appointments)
                        {
                            <tr>
                                <td>@(appCounter++)</td>
                                <td>@(app.Date.Date.ToShortDateString() + " " + app.Date.ToShortTimeString())</td>
                                <td>@app.DoctorName</td>
                                <td>@app.ServiceName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <span>Предстоящих приёмов нет</span>
        }
    </div>
</div>

<script>
    $('#print-patient-card').click(function () {
        window.open('@Url.Action("PatientCard", new { id = Model.Patient.Id })');
    })

    $('#print-contract').click( function ()
    {
        window.open('@Url.Action("PatientDogovorWord", new { id = Model.Patient.Id })');
    });

    $('#print-consent').click( function ()
    {
        window.open('@Url.Action("PatientConsentWord", new { id = Model.Patient.Id })');
    });
</script>
