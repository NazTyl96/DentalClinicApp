@using AlphaStomPlusMVC.Models.ViewModels.Home;
@model IndexViewModel

<link href="~/Content/css/Home/home.css" rel="stylesheet" />

<h2>Home Page</h2>

<div class="quick-action-list">
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="view-notifications" onclick="viewNotifications()">
        @if (Model.NotificationsCount > 0)
        {
            <span class="z-index-1 position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notifications-count">
                @Model.NotificationsCount
            </span>
        }
        <i class="bi bi-bell-fill"></i><br /> Notifications
    </button>
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="add-patient" onclick="addPatient()"><i class="bi bi-person-plus-fill"></i><br /> Add a patient</button>
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="add-document" onclick="addDocument()"><i class="bi bi-file-earmark-plus-fill"></i><br /> Add a document</button>
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="add-appointment" onclick="addAppointment()"><i class="bi bi-calendar2-plus-fill"></i><br /> Add an appointment</button>
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="add-doctor" onclick="addDoctor()"><i class="bi bi-journal-plus"></i><br /> Add a doctor</button>
    <button type="button" class="btn btn-sm btn-outline-primary quick-action-list__action" id="add-service" onclick="addService()"><i class="bi bi-clipboard-plus"></i><br /> Add a service</button>
</div>

<script src="~/Scripts/Home/home.js"></script>