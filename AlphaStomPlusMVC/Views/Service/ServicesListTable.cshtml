@model List<AlphaStomPlusMVC.Models.ViewModels.Service.ServicesListViewModel>
@{ 
    int counter = 1;
}

@if (Model.Any())
{
    <div class="table-container" id="service-table-container">
        <table class="table table-striped table-hover tablesorter tablesorter-default" id="services-list-table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Стоимость</th>
                    <th>Тип</th>
                    @*<th>Услуга по умолчанию</th>*@
                    <th data-sorter="false"></th>
                    <th data-sorter="false"></th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var service in Model)
                {
                <tr data-service-id="@service.Id">
                    <td>@(counter++)</td>
                    <td>@service.Name</td>
                    <td>@service.Cost</td>
                    <td>@service.Type</td>
                    @*<td>
                        @if (service.IsDefault)
                        {
                            <i class="bi bi-check-square-fill"></i>
                        }
                    </td>*@
                    <td><button type="button" class="btn btn-sm btn-outline-primary edit-service"><i class="bi bi-pencil-fill"></i> Редактировать</button></td>
                    @if (service.Status == 1)
                    {
                        <td><button type="button" class="btn btn-sm btn-outline-secondary delete-restore-btn delete-service" data-service-id=""><i class="bi bi-folder-plus"></i> Перевести в архив</button></td>
                    }
                    else
                    {
                        <td><button type="button" class="btn btn-sm btn-outline-secondary delete-restore-btn restore-service" data-service-id=""><i class="bi bi-folder-symlink"></i> Вернуть в работу</button></td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h4>Услуги не найдены</h4>
}
